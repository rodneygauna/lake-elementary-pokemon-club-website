<% content_for :title, @can_view_details ? @student.full_name : @student.initials %>

<!-- Navigation Controls -->
      <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <%= link_to "Students", students_path, class: "text-decoration-none" %>
          </li>
          <li class="breadcrumb-item active" aria-current="page">
            <%= @can_view_details ? @student.full_name : @student.initials %>
          </li>
        </ol>
      </nav>

      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <%= link_to students_path, class: "btn btn-outline-secondary me-2" do %>
            <i class="fas fa-arrow-left me-1"></i>
            Back to Students
          <% end %>
          <% if @can_view_details && (admin? || (current_user && @student.users.include?(current_user))) %>
            <%= link_to edit_student_path(@student), class: "btn btn-outline-primary me-2" do %>
              <i class="fas fa-edit me-1"></i>
              Edit Student
            <% end %>
          <% end %>
          <% if admin? %>
            <%= form_with model: @student, method: :delete, local: true, class: "d-inline", id: "delete-student-form" do |form| %>
              <button type="button"
                      class="btn btn-outline-danger"
                      data-bs-toggle="modal"
                      data-bs-target="#confirmationModal"
                      data-confirm-title="Delete Student"
                      data-confirm-message="Are you sure you want to delete <%= @student.display_name_for(current_user).gsub('"', '&quot;') %>? This action cannot be undone."
                      data-confirm-action="Delete Student"
                      data-form-id="delete-student-form">
                <i class="fas fa-trash me-1"></i> Delete
              </button>
            <% end %>
          <% end %>
        </div>
      </div>

      <!-- Student Header Card -->
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
          <div class="d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center">
              <i class="fas fa-user me-2"></i>
              <h1 class="h4 mb-0">
                <%= @can_view_details ? @student.full_name : @student.initials %>
              </h1>
            </div>
            <div class="d-flex gap-2">
              <!-- Status Badge -->
              <% if @student.status == "active" %>
                <span class="badge bg-success">
                  <i class="fas fa-check-circle me-1"></i>Active Member
                </span>
              <% else %>
                <span class="badge bg-warning text-dark">
                  <i class="fas fa-pause-circle me-1"></i><%= @student.status.titleize %>
                </span>
              <% end %>
            </div>
          </div>
        </div>
        <div class="card-body">
          <p class="text-muted mb-0">
            <i class="fas fa-info-circle me-1"></i>
            <% if @can_view_details %>
              View and manage student information and club details.
            <% else %>
              Limited information available for privacy protection.
            <% end %>
          </p>
        </div>
      </div>      <!-- Student Details -->
      <% if @can_view_details %>
        <!-- Detailed Information Card -->
        <div class="card shadow-sm mb-4">
          <div class="card-body">
            <h5 class="text-dark border-bottom pb-2 mb-4">
              <i class="fas fa-info-circle me-2"></i>Detailed Information
            </h5>

            <div class="row g-3">
              <% if @student.notes.present? %>
                <!-- Notes Section -->
                <div class="col-12">
                  <div class="p-3 rounded" style="background-color: var(--pokemon-light-blue);">
                    <h6 class="text-muted mb-2">
                      <i class="fas fa-sticky-note me-1"></i>Additional Notes
                    </h6>
                    <div class="text-dark">
                      <%= simple_format(@student.notes) %>
                    </div>
                  </div>
                </div>
              <% end %>

              <!-- Grade Information -->
              <div class="col-12 col-md-6">
                <div class="p-3 rounded" style="background-color: #f8f9fa;">
                  <h6 class="text-muted mb-1">
                    <i class="fas fa-graduation-cap me-1"></i>Grade Level
                  </h6>
                  <div class="fw-bold text-dark">
                    <% case @student.grade %>
                    <% when "kindergarten_grade" %>
                      Kindergarten
                    <% when "first_grade" %>
                      1st Grade
                    <% when "second_grade" %>
                      2nd Grade
                    <% when "third_grade" %>
                      3rd Grade
                    <% when "fourth_grade" %>
                      4th Grade
                    <% when "fifth_grade" %>
                      5th Grade
                    <% when "sixth_grade" %>
                      6th Grade
                    <% else %>
                      Grade <%= @student.grade %>
                    <% end %>
                  </div>
                </div>
              </div>

              <!-- Favorite Pokemon -->
              <div class="col-12 col-md-6">
                <div class="p-3 rounded" style="background-color: var(--pokemon-light-yellow);">
                  <h6 class="text-muted mb-1">
                    <i class="fas fa-star me-1"></i>Favorite Pok√©mon
                  </h6>
                  <div class="fw-bold text-dark">
                    <%= @student.favorite_pokemon.present? ? @student.favorite_pokemon : "Not specified" %>
                  </div>
                </div>
              </div>

              <!-- Teacher Information -->
              <% if @student.teacher_name.present? %>
                <div class="col-12 col-md-6">
                  <div class="p-3 rounded" style="background-color: #f8f9fa;">
                    <h6 class="text-muted mb-1">
                      <i class="fas fa-chalkboard-teacher me-1"></i>Teacher
                    </h6>
                    <div class="fw-bold text-dark">
                      <%= @student.teacher_name %>
                    </div>
                  </div>
                </div>
              <% end %>

              <!-- Class/Room Number -->
              <% if @student.class_number.present? %>
                <div class="col-12 col-md-6">
                  <div class="p-3 rounded" style="background-color: #f8f9fa;">
                    <h6 class="text-muted mb-1">
                      <i class="fas fa-door-open me-1"></i>Class/Room
                    </h6>
                    <div class="fw-bold text-dark">
                      <%= @student.class_number %>
                    </div>
                  </div>
                </div>
              <% end %>

              <!-- Registration Information -->
              <div class="col-12 col-md-6">
                <div class="p-3 rounded" style="background-color: #f8f9fa;">
                  <h6 class="text-muted mb-1">
                    <i class="fas fa-calendar-plus me-1"></i>Member Since
                  </h6>
                  <div class="fw-bold text-dark">
                    <%= @student.created_at.strftime("%B %d, %Y") %>
                  </div>
                </div>
              </div>

              <!-- Last Updated -->
              <div class="col-12 col-md-6">
                <div class="p-3 rounded" style="background-color: #f8f9fa;">
                  <h6 class="text-muted mb-1">
                    <i class="fas fa-clock me-1"></i>Last Updated
                  </h6>
                  <div class="fw-bold text-dark">
                    <%= @student.updated_at.strftime("%B %d, %Y") %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Attendance History -->
        <div class="card shadow-sm mb-4">
          <div class="card-header bg-success text-white">
            <div class="d-flex align-items-center justify-content-between">
              <div class="d-flex align-items-center">
                <i class="fas fa-calendar-check me-2"></i>
                <h5 class="mb-0">Event Attendance History</h5>
              </div>
              <div>
                <% if @attended_events&.any? %>
                  <span class="badge bg-light text-dark">
                    <i class="fas fa-check me-1"></i><%= @attended_events.count %> Events Attended
                  </span>
                <% end %>
              </div>
            </div>
          </div>
          <div class="card-body">
            <% if @attended_events&.any? %>
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead style="background: linear-gradient(135deg, var(--pokemon-electric-blue) 0%, #0066CC 100%);" class="text-white">
                    <tr>
                      <th scope="col">
                        <i class="fas fa-calendar me-1"></i>Event
                      </th>
                      <th scope="col">
                        <i class="fas fa-clock me-1"></i>Date & Time
                      </th>
                      <th scope="col">
                        <i class="fas fa-map-marker-alt me-1"></i>Location
                      </th>
                      <th scope="col">
                        <i class="fas fa-user-check me-1"></i>Marked
                      </th>
                      <th scope="col" class="text-center">
                        <i class="fas fa-check-circle me-1"></i>Status
                      </th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @attended_events.each_with_index do |attendance, index| %>
                      <% event = attendance.event %>
                      <tr class="<%= 'table-light' if index.even? %>">
                        <td>
                          <div class="fw-medium text-dark">
                            <%= link_to event.title, event_path(event), class: "text-decoration-none" %>
                          </div>
                          <% if event.description.present? %>
                            <small class="text-muted">
                              <%= truncate(strip_tags(event.description), length: 60) %>
                            </small>
                          <% end %>
                        </td>
                        <td>
                          <div class="text-dark">
                            <%= event.starts_at.in_time_zone(event.time_zone).strftime("%m/%d/%Y") %>
                          </div>
                          <small class="text-muted">
                            <%= event.starts_at.in_time_zone(event.time_zone).strftime("%l:%M %p") %>
                            <% if event.ends_at %>
                              - <%= event.ends_at.in_time_zone(event.time_zone).strftime("%l:%M %p") %>
                            <% end %>
                          </small>
                        </td>
                        <td>
                          <% if event.venue.present? %>
                            <span class="text-dark"><%= event.venue %></span>
                          <% else %>
                            <span class="text-muted">-</span>
                          <% end %>
                        </td>
                        <td>
                          <% if attendance.marked_at.present? %>
                            <small class="text-muted">
                              <i class="fas fa-clock me-1"></i>
                              Marked <%= attendance.marked_at.strftime("%m/%d/%Y") %>
                            </small>
                            <% if admin? %>
                              <br><small class="text-muted">by <%= attendance.marked_by_name %></small>
                            <% end %>
                          <% else %>
                            <span class="text-muted">-</span>
                          <% end %>
                        </td>
                        <td class="text-center">
                          <span class="badge bg-success">
                            <i class="fas fa-check me-1"></i>Attended
                          </span>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            <% else %>
              <!-- Empty State -->
              <div class="text-center py-5">
                <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                <h5 class="text-muted mb-3">No Events Attended Yet</h5>
                <p class="text-muted mb-4">
                  <%= @can_view_details ? @student.first_name : "This student" %> hasn't attended any club events yet.
                  Encourage participation in upcoming activities!
                </p>
                <div class="d-flex justify-content-center gap-2">
                  <%= link_to events_path, class: "btn btn-outline-primary" do %>
                    <i class="fas fa-calendar-alt me-2"></i>View Upcoming Events
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% else %>
        <!-- Limited Information Card -->
        <div class="card shadow-sm mb-4">
          <div class="card-body text-center py-5">
            <i class="fas fa-lock fa-3x text-muted mb-3"></i>
            <h5 class="text-muted">Limited Access</h5>
            <p class="text-muted">
              Full details are only available to parents/guardians and administrators.
            </p>
          </div>
        </div>
      <% end %>

      <!-- Admin Panel -->
      <% if admin? %>
        <div class="card shadow-sm">
          <div class="card-header text-white" style="background: linear-gradient(135deg, #FFA500 0%, #FF8C00 100%);">
            <h5 class="card-title mb-0 d-flex align-items-center">
              <i class="fas fa-shield-alt me-2"></i>
              Admin Controls
            </h5>
          </div>
          <div class="card-body">
            <!-- Linked Parents Section -->
            <h6 class="text-dark border-bottom pb-2 mb-3">
              <i class="fas fa-users me-1"></i>
              Linked Parents
            </h6>

            <% if @linked_parents.any? %>
              <div class="row g-3 mb-3">
                <% @linked_parents.each do |parent| %>
                  <div class="col-12 col-md-6">
                    <div class="d-flex justify-content-between align-items-start p-3 border rounded" style="background-color: var(--pokemon-light-blue);">
                      <div class="flex-grow-1">
                        <div class="fw-semibold text-dark"><%= parent.full_name %></div>
                        <small class="text-muted">
                          <i class="fas fa-envelope me-1"></i><%= parent.email_address %>
                        </small>
                      </div>
                      <div class="d-flex gap-1">
                        <%= link_to admin_user_path(parent), class: "btn btn-sm btn-outline-primary" do %>
                          <i class="fas fa-eye"></i>
                        <% end %>
                        <%= form_with model: parent.user_students.find_by(student: @student), method: :delete, local: true, class: "d-inline" do |form| %>
                          <button type="button"
                                  class="btn btn-sm btn-outline-danger"
                                  data-bs-toggle="modal"
                                  data-bs-target="#confirmationModal"
                                  data-confirm-title="Unlink Parent"
                                  data-confirm-message="Are you sure you want to unlink <%= parent.full_name %> from this student?"
                                  data-confirm-action="Unlink">
                            <i class="fas fa-times"></i>
                          </button>
                        <% end %>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-3 mb-3" style="background-color: #f8f9fa; border-radius: 8px;">
                <i class="fas fa-user-slash fa-2x text-muted mb-2"></i>
                <p class="text-muted mb-0">No linked parents</p>
              </div>
            <% end %>

            <hr>

            <!-- Link New Parent Form -->
            <h6 class="text-success border-bottom pb-2 mb-3">
              <i class="fas fa-user-plus me-1"></i>
              Link New Parent
            </h6>

            <div class="row">
              <div class="col-md-8">
                <%= form_with model: [@student, UserStudent.new], local: true, class: "d-flex gap-2" do |form| %>
                  <%= form.hidden_field :student_id, value: @student.id %>
                  <div class="flex-grow-1">
                    <%= form.select :user_id,
                        User.users.active.order(:last_name, :first_name).pluck(:email_address, :id),
                        { prompt: "Choose a parent to link..." },
                        { class: 'form-select' } %>
                  </div>
                  <%= form.submit "Link Parent", class: 'btn btn-success' %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render "shared/generic_confirmation_modal" %>