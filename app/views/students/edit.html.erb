<% content_for :title, "Edit Student - #{@student.full_name}" %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <!-- Navigation Controls -->
      <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <%= link_to "Students", students_path, class: "text-decoration-none" %>
          </li>
          <li class="breadcrumb-item">
            <%= link_to @student.full_name, @student, class: "text-decoration-none" %>
          </li>
          <li class="breadcrumb-item active" aria-current="page">Edit</li>
        </ol>
      </nav>

      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <%= link_to students_path, class: "btn btn-outline-secondary me-2" do %>
            <i class="fas fa-arrow-left me-1"></i>
            Back to Students
          <% end %>
          <%= link_to @student, class: "btn btn-outline-primary" do %>
            <i class="fas fa-eye me-1"></i>
            View Student
          <% end %>
        </div>
      </div>

      <!-- Header Card -->
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
          <div class="d-flex align-items-center">
            <i class="fas fa-user-edit me-2"></i>
            <h1 class="h4 mb-0">Edit Student: <%= @student.full_name %></h1>
          </div>
        </div>
        <div class="card-body">
          <p class="text-muted mb-0">
            <i class="fas fa-info-circle me-1"></i>
            Update student information below. All changes will be saved when you submit the form.
          </p>
        </div>
      </div>

      <!-- Form Card -->
      <div class="card shadow-sm">
        <div class="card-body">
          <%= render "form", student: @student %>
        </div>
      </div>
    </div>
  </div>
</div>
