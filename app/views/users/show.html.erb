<div class="row">
  <div class="col-md-8 mx-auto">
    <div class="card">
      <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
          <h2>My Profile</h2>
          <%= link_to "Edit Profile", edit_user_path, class: "btn btn-primary" %>
        </div>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-sm-3">Name:</dt>
          <dd class="col-sm-9"><%= current_user.full_name %></dd>

          <dt class="col-sm-3">Email:</dt>
          <dd class="col-sm-9"><%= current_user.email_address %></dd>

          <dt class="col-sm-3">Role:</dt>
          <dd class="col-sm-9">
            <span class="badge bg-<%= current_user.admin? ? 'warning' : 'secondary' %>">
              <%= current_user.role.humanize %>
            </span>
          </dd>

          <dt class="col-sm-3">Member Since:</dt>
          <dd class="col-sm-9"><%= current_user.created_at.strftime("%B %d, %Y") %></dd>
        </dl>

        <% if current_user.user_students.any? %>
          <div class="mt-4">
            <h5>My Students</h5>
            <div class="row">
              <% current_user.students.each do |student| %>
                <div class="col-md-6 mb-3">
                  <div class="card">
                    <div class="card-body">
                      <h6 class="card-title"><%= student.name %></h6>
                      <p class="card-text">
                        <small class="text-muted">Grade <%= student.grade %> â€¢ Age <%= student.age %></small>
                      </p>
                      <%= link_to "View Details", student_path(student), class: "btn btn-sm btn-outline-primary" %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>