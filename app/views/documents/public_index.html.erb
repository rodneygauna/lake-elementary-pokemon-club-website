<% content_for :title, "Club Resources" %>

<!-- Breadcrumb Navigation -->
<nav aria-label="breadcrumb" class="mb-3">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to "Home", root_path, class: "text-decoration-none" %>
    </li>
    <li class="breadcrumb-item active" aria-current="page">Resources</li>
  </ol>
</nav>

<!-- Action Buttons -->
<div class="d-flex flex-wrap gap-2 mb-3">
  <%= link_to root_path, class: "btn btn-outline-secondary" do %>
    <i class="fas fa-arrow-left me-2"></i>Back to Home
  <% end %>
</div>

<!-- Header Card -->
<div class="card shadow-sm mb-4">
  <div class="card-header bg-primary text-white">
    <div class="d-flex align-items-center justify-content-between">
      <div class="d-flex align-items-center">
        <i class="fas fa-folder-open me-2"></i>
        <h1 class="h4 mb-0">Club Resources</h1>
      </div>
      <div class="d-flex align-items-center">
        <span class="badge bg-light text-dark">
          <i class="fas fa-file-alt me-1"></i>
          <%= pluralize(@documents.count, 'Resource') %>
        </span>
      </div>
    </div>
  </div>
  <div class="card-body">
    <p class="text-muted mb-0">
      <i class="fas fa-info-circle me-1"></i>
      Find all the essential documents, forms, and helpful links you need for club participation.
        Download files directly or visit external links for additional information and resources.
    </p>
  </div>
</div>

<% if @link_documents.any? %>
  <!-- External Links Section -->
  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <h5 class="text-dark border-bottom pb-2 mb-4">
        <i class="fas fa-external-link-alt me-2"></i>External Links
      </h5>

      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="table-light">
            <tr>
              <th scope="col">
                <i class="fas fa-link me-1"></i>Resource Name
              </th>
              <th scope="col">
                <i class="fas fa-info-circle me-1"></i>Description
              </th>
              <th scope="col">
                <i class="fas fa-external-link-alt me-1"></i>Link
              </th>
            </tr>
          </thead>
          <tbody>
            <% @link_documents.each do |document| %>
              <tr>
                <td>
                  <div class="d-flex align-items-center">
                    <i class="fas fa-external-link-alt fa-lg text-primary me-3"></i>
                    <div>
                      <div class="fw-medium text-dark"><%= document.display_name %></div>
                    </div>
                  </div>
                </td>
                <td>
                  <% if document.description.present? %>
                    <% if document.description.length > 80 %>
                      <span class="text-muted">
                        <span class="description-short-<%= document.id %>"><%= truncate(document.description, length: 80) %></span>
                        <span class="description-full-<%= document.id %>" style="display: none;"><%= simple_format(document.description, {}, wrapper_tag: "span") %></span>
                        <br>
                        <button type="button" class="btn btn-link btn-sm p-0 text-decoration-none toggle-description"
                                data-target="<%= document.id %>"
                                data-short-text="Show more"
                                data-full-text="Show less">
                          <small>Show more <i class="fas fa-chevron-down"></i></small>
                        </button>
                      </span>
                    <% else %>
                      <span class="text-muted"><%= simple_format(document.description, {}, wrapper_tag: "span") %></span>
                    <% end %>
                  <% else %>
                    <span class="text-muted fst-italic">No description available</span>
                  <% end %>
                </td>
                <td>
                  <%= link_to document.url, target: "_blank", rel: "noopener noreferrer", class: "btn btn-sm btn-outline-primary" do %>
                    <i class="fas fa-external-link-alt me-1"></i>Visit
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>

<% if @file_documents.any? %>
  <!-- File Downloads Section -->
  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <h5 class="text-dark border-bottom pb-2 mb-4">
        <i class="fas fa-file-download me-2"></i>File Downloads
      </h5>

      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="table-light">
            <tr>
              <th scope="col">
                <i class="fas fa-file me-1"></i>File Name
              </th>
              <th scope="col">
                <i class="fas fa-info-circle me-1"></i>Description
              </th>
              <th scope="col">
                <i class="fas fa-hdd me-1"></i>Size & Type
              </th>
              <th scope="col">
                <i class="fas fa-download me-1"></i>Action
              </th>
            </tr>
          </thead>
          <tbody>
            <% @file_documents.each do |document| %>
              <tr>
                <td>
                  <div class="d-flex align-items-center">
                    <% if document.is_image? %>
                      <i class="fas fa-image fa-lg text-success me-3"></i>
                    <% else %>
                      <i class="fas fa-file fa-lg text-info me-3"></i>
                    <% end %>
                    <div>
                      <div class="fw-medium text-dark"><%= document.display_name %></div>
                    </div>
                  </div>
                </td>
                <td>
                  <% if document.description.present? %>
                    <% if document.description.length > 80 %>
                      <span class="text-muted">
                        <span class="description-short-<%= document.id %>"><%= truncate(document.description, length: 80) %></span>
                        <span class="description-full-<%= document.id %>" style="display: none;"><%= simple_format(document.description, {}, wrapper_tag: "span") %></span>
                        <br>
                        <button type="button" class="btn btn-link btn-sm p-0 text-decoration-none toggle-description"
                                data-target="<%= document.id %>"
                                data-short-text="Show more"
                                data-full-text="Show less">
                          <small>Show more <i class="fas fa-chevron-down"></i></small>
                        </button>
                      </span>
                    <% else %>
                      <span class="text-muted"><%= simple_format(document.description, {}, wrapper_tag: "span") %></span>
                    <% end %>
                  <% else %>
                    <span class="text-muted fst-italic">No description available</span>
                  <% end %>
                </td>
                <td>
                  <% if document.file_attachment.attached? %>
                    <div class="small">
                      <span class="badge bg-secondary me-1"><%= document.file_extension&.upcase || "FILE" %></span>
                      <span class="text-muted"><%= number_to_human_size(document.file_size) %></span>
                    </div>
                  <% else %>
                    <span class="text-muted">â€”</span>
                  <% end %>
                </td>
                <td>
                  <% if document.file_attachment.attached? %>
                    <%= link_to resource_download_path(document), class: "btn btn-sm btn-success" do %>
                      <i class="fas fa-download me-1"></i>Download
                    <% end %>
                  <% else %>
                    <span class="text-muted">File not available</span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>

<% if @link_documents.empty? && @file_documents.empty? %>
  <!-- Empty State -->
  <div class="card shadow-sm">
    <div class="card-body text-center py-5">
      <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
      <h5 class="text-muted">Resources Coming Soon</h5>
      <p class="text-muted">
        We're working on gathering helpful documents, forms, and links for club members and families.
        Check back soon for access to important club resources.
      </p>
    </div>
  </div>
<% end %>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Handle description toggle functionality
  const toggleButtons = document.querySelectorAll('.toggle-description');

  toggleButtons.forEach(function(button) {
    button.addEventListener('click', function() {
      const targetId = this.getAttribute('data-target');
      const shortText = this.getAttribute('data-short-text');
      const fullText = this.getAttribute('data-full-text');

      const shortSpan = document.querySelector('.description-short-' + targetId);
      const fullSpan = document.querySelector('.description-full-' + targetId);
      const buttonContent = this.querySelector('small');

      if (shortSpan && fullSpan && buttonContent) {
        if (shortSpan.style.display === 'none') {
          // Currently showing full, switch to short
          shortSpan.style.display = 'inline';
          fullSpan.style.display = 'none';
          buttonContent.innerHTML = shortText + ' <i class="fas fa-chevron-down"></i>';
        } else {
          // Currently showing short, switch to full
          shortSpan.style.display = 'none';
          fullSpan.style.display = 'inline';
          buttonContent.innerHTML = fullText + ' <i class="fas fa-chevron-up"></i>';
        }
      }
    });
  });
});

// Also handle turbo navigation
document.addEventListener('turbo:load', function() {
  // Re-initialize toggle functionality for Turbo navigation
  const toggleButtons = document.querySelectorAll('.toggle-description');

  toggleButtons.forEach(function(button) {
    // Remove existing listeners to prevent duplicates
    button.replaceWith(button.cloneNode(true));
  });

  // Re-add event listeners
  const newToggleButtons = document.querySelectorAll('.toggle-description');
  newToggleButtons.forEach(function(button) {
    button.addEventListener('click', function() {
      const targetId = this.getAttribute('data-target');
      const shortText = this.getAttribute('data-short-text');
      const fullText = this.getAttribute('data-full-text');

      const shortSpan = document.querySelector('.description-short-' + targetId);
      const fullSpan = document.querySelector('.description-full-' + targetId);
      const buttonContent = this.querySelector('small');

      if (shortSpan && fullSpan && buttonContent) {
        if (shortSpan.style.display === 'none') {
          // Currently showing full, switch to short
          shortSpan.style.display = 'inline';
          fullSpan.style.display = 'none';
          buttonContent.innerHTML = shortText + ' <i class="fas fa-chevron-down"></i>';
        } else {
          // Currently showing short, switch to full
          shortSpan.style.display = 'none';
          fullSpan.style.display = 'inline';
          buttonContent.innerHTML = fullText + ' <i class="fas fa-chevron-up"></i>';
        }
      }
    });
  });
});
</script>