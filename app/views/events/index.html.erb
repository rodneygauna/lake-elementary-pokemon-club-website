<% content_for :title, "Events" %>

<!-- Navigation Controls -->
<nav aria-label="breadcrumb" class="mb-3">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to "Home", root_path, class: "text-decoration-none" %>
    </li>
    <li class="breadcrumb-item active" aria-current="page">Events</li>
  </ol>
</nav>

<!-- Action Buttons (Before Header) -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <%= link_to root_path, class: "btn btn-outline-secondary me-2" do %>
      <i class="fas fa-arrow-left me-1"></i>Back to Home
    <% end %>
  </div>
  <div>
    <% if current_user&.admin_level? %>
      <%= link_to new_event_path, class: "btn btn-success" do %>
        <i class="fas fa-plus me-2"></i>New Event
      <% end %>
    <% end %>
  </div>
</div>

<!-- Header Card -->
<div class="card shadow-sm mb-4">
  <div class="card-header bg-primary text-white">
    <div class="d-flex align-items-center justify-content-between">
      <div class="d-flex align-items-center">
        <i class="fas fa-calendar-alt me-2"></i>
        <h1 class="h4 mb-0">Pokémon Club Events</h1>
      </div>
    </div>
  </div>
        <div class="card-body">
          <p class="text-muted mb-0">
            <i class="fas fa-info-circle me-1"></i>
            Stay updated with Pokémon Club meetings and activities.
          </p>
        </div>
      </div>

      <!-- View Toggle and Filters -->
      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <div class="d-flex flex-column flex-lg-row justify-content-between align-items-start align-items-lg-center gap-3">

            <!-- View Mode Toggle -->
            <div class="btn-group" role="group" aria-label="View mode">
              <%= link_to events_path(view: 'list', type: params[:type], show_cancelled: params[:show_cancelled]),
                  class: "btn #{'btn-primary' if @view_mode == 'list'} #{'btn-outline-primary' if @view_mode != 'list'}" do %>
                <i class="fas fa-list me-1"></i> Agenda
              <% end %>
              <%= link_to events_path(view: 'calendar', type: params[:type], show_cancelled: params[:show_cancelled]),
                  class: "btn #{'btn-primary' if @view_mode == 'calendar'} #{'btn-outline-primary' if @view_mode != 'calendar'}" do %>
                <i class="fas fa-calendar me-1"></i> Calendar
              <% end %>
            </div>

            <!-- Filters -->
            <div class="d-flex flex-wrap align-items-center gap-2">
              <!-- Type Filter -->
              <div class="dropdown">
                <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                  <i class="fas fa-tag me-1"></i>
                  Type: <%= params[:type]&.titleize || 'All' %>
                </button>
                <ul class="dropdown-menu">
                  <%= link_to "All Types", events_path(view: @view_mode, show_cancelled: params[:show_cancelled]), class: "dropdown-item #{'active' if params[:type].blank?}" %>
                  <%= link_to "Regular Meetings", events_path(view: @view_mode, type: 'regular', show_cancelled: params[:show_cancelled]), class: "dropdown-item #{'active' if params[:type] == 'regular'}" %>
                  <%= link_to "Special Events", events_path(view: @view_mode, type: 'special', show_cancelled: params[:show_cancelled]), class: "dropdown-item #{'active' if params[:type] == 'special'}" %>
                </ul>
              </div>

              <!-- Cancelled Events Toggle -->
              <div class="form-check form-switch d-flex align-items-center">
                <input class="form-check-input" type="checkbox" role="switch" id="showCancelledToggle"
                       <%= params[:show_cancelled] == 'true' ? 'checked' : '' %>
                       onchange="this.form.submit()">
                <label class="form-check-label" for="showCancelledToggle">
                  <i class="fas fa-eye-slash me-1"></i>Show Cancelled Events
                </label>
                <%= form_with url: events_path, method: :get, local: true, class: "d-none", id: "filterForm" do |form| %>
                  <%= form.hidden_field :view, value: @view_mode %>
                  <%= form.hidden_field :type, value: params[:type] %>
                  <%= form.hidden_field :show_cancelled, id: "showCancelledField", value: params[:show_cancelled] == 'true' ? 'false' : 'true' %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>

<script>
  document.getElementById('showCancelledToggle').addEventListener('change', function() {
    const hiddenField = document.getElementById('showCancelledField');
    hiddenField.value = this.checked ? 'true' : 'false';
    document.getElementById('filterForm').submit();
  });
</script>

      <!-- Events Display -->
      <% if @events.any? %>
        <% if @view_mode == 'calendar' %>
          <!-- FullCalendar View -->
          <div class="card shadow-sm">
            <div class="card-body">
              <div data-controller="events-calendar"
                   data-events-calendar-events-value="<%= @calendar_events.to_json %>"
                   data-events-calendar-current-user-value="<%= (current_user&.attributes&.slice('id', 'role') || {}).to_json %>">
                <div data-events-calendar-target="calendar"></div>
              </div>
            </div>
          </div>
        <% else %>
          <!-- List/Agenda View -->
          <div id="events" class="row g-3">
            <% @events.each do |event| %>
              <div class="col-12">
                <%= render 'event_card', event: event %>
              </div>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <!-- Empty State -->
        <div class="card shadow-sm">
          <div class="card-body text-center py-5">
            <div class="mb-4">
              <i class="fas fa-calendar-times fa-4x text-muted mb-3"></i>
              <h4 class="text-muted">No Events Found</h4>
              <p class="text-muted mb-4">
                <% if params[:type].present? %>
                  Try adjusting your filters to see more events.
                <% else %>
                  There are no events scheduled at this time.
                <% end %>
              </p>
              <% if current_user&.admin_level? %>
                <%= link_to new_event_path, class: "btn btn-primary" do %>
                  <i class="fas fa-plus me-2"></i>Create First Event
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
    <% end %>
  </div>


