<!-- Donor Card Component -->
<div id="<%= dom_id donor %>" class="card shadow-sm mb-3">
  <div class="card-body">
    <div class="row align-items-center">
      <div class="col-md-2 text-center">
        <% if donor.has_logo_or_photo? %>
          <%= image_tag donor.photo_or_logo,
                        alt: "#{donor.name} photo/logo",
                        class: "img-thumbnail",
                        style: "max-width: 80px; max-height: 80px;" %>
        <% else %>
          <div class="bg-light rounded d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
            <i class="fas fa-<%= donor.donor_type == 'business' ? 'building' : 'user' %> fa-2x text-muted"></i>
          </div>
        <% end %>
      </div>

      <div class="col-md-6">
        <h5 class="card-title mb-1 text-dark">
          <%= donor.display_name %>
        </h5>
        <div class="mb-2">
          <span class="badge bg-secondary me-2">
            <i class="fas fa-<%= donor.donor_type == 'business' ? 'building' : 'user' %> me-1"></i>
            <%= donor.donor_type.humanize %>
          </span>
          <span class="badge bg-success">
            <i class="fas fa-dollar-sign me-1"></i>
            <%= donor.formatted_donation_amount %>
          </span>
        </div>
        <p class="card-text text-muted mb-1">
          <i class="fas fa-gift me-1"></i>
          <%= donor.donation_type %>
        </p>
        <% if donor.website_link.present? %>
          <p class="card-text mb-0">
            <%= link_to donor.website_link, donor.website_link,
                        target: "_blank",
                        rel: "noopener noreferrer",
                        class: "text-decoration-none small" do %>
              <i class="fas fa-external-link-alt me-1"></i>
              <%= truncate(donor.website_link, length: 40) %>
            <% end %>
          </p>
        <% end %>
      </div>

      <div class="col-md-2 text-center">
        <% case donor.privacy_setting %>
        <% when 'public' %>
          <span class="badge bg-success">
            <i class="fas fa-eye me-1"></i>Public
          </span>
        <% when 'anonymous' %>
          <span class="badge bg-warning text-dark">
            <i class="fas fa-user-secret me-1"></i>Anonymous
          </span>
        <% when 'private' %>
          <span class="badge bg-secondary">
            <i class="fas fa-eye-slash me-1"></i>Private
          </span>
        <% end %>
      </div>

      <div class="col-md-2 text-end">
        <div class="btn-group" role="group">
          <%= link_to admin_donor_path(donor),
                      class: "btn btn-outline-primary btn-sm",
                      title: "View Details" do %>
            <i class="fas fa-eye"></i>
          <% end %>
          <%= link_to edit_admin_donor_path(donor),
                      class: "btn btn-outline-secondary btn-sm",
                      title: "Edit Donor" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
