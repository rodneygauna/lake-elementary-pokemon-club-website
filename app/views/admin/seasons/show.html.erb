<% content_for :title, "Season Details - #{@season.name}" %>

<!-- Breadcrumb Navigation -->
<nav aria-label="breadcrumb" class="mb-3">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to "Home", root_path, class: "text-decoration-none" %>
    </li>
    <li class="breadcrumb-item">
      <%= link_to "Season Management", admin_seasons_path, class: "text-decoration-none" %>
    </li>
    <li class="breadcrumb-item active" aria-current="page"><%= @season.name %></li>
  </ol>
</nav>

<!-- Action Buttons (Before Header) -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <%= link_to admin_seasons_path, class: "btn btn-outline-secondary me-2" do %>
      <i class="fas fa-arrow-left me-1"></i>Back
    <% end %>
    <%= link_to edit_admin_season_path(@season), class: "btn btn-outline-primary me-2" do %>
      <i class="fas fa-edit me-1"></i>Edit
    <% end %>
    <% if current_user.can_delete? %>
      <% form_id = "delete-season-form" %>
      <%= form_with model: [:admin, @season], method: :delete, local: true, class: "d-inline", id: form_id do |form| %>
        <button type="button"
                class="btn btn-outline-danger"
                data-bs-toggle="modal"
                data-bs-target="#confirmationModal"
                data-confirm-title="Delete Season"
                data-confirm-message="Are you sure you want to delete <%= @season.name %>? This action cannot be undone and will remove all student memberships for this season."
                data-confirm-action="Delete Season"
                data-form-id="<%= form_id %>">
          <i class="fas fa-trash me-1"></i>Delete
        </button>
      <% end %>
    <% end %>
  </div>
</div>

<!-- Header Card -->
<div class="card shadow-sm mb-4">
  <div class="card-header bg-primary text-white">
    <div class="d-flex align-items-center justify-content-between">
      <div class="d-flex align-items-center">
        <i class="fas fa-calendar-alt me-2"></i>
        <h1 class="h4 mb-0">Season Details</h1>
      </div>
      <div class="d-flex align-items-center gap-2">
        <% if @season.current? %>
          <span class="badge bg-success">
            <i class="fas fa-check-circle me-1"></i>Current Season
          </span>
        <% elsif @season.inactive? %>
          <span class="badge bg-secondary">Inactive</span>
        <% elsif @season.past? %>
          <span class="badge bg-light text-dark">Past</span>
        <% elsif @season.upcoming? %>
          <span class="badge bg-info">Upcoming</span>
        <% end %>
      </div>
    </div>
  </div>
  <div class="card-body">
    <p class="text-muted mb-0">
      <i class="fas fa-info-circle me-1"></i>
      Detailed information for this season and enrolled members.
    </p>
  </div>
</div>

<!-- Season Information Card -->
<div class="card shadow-sm mb-4">
  <div class="card-body">
    <h5 class="text-dark border-bottom pb-2 mb-4">
      <i class="fas fa-calendar-alt me-2"></i>Season Information
    </h5>

    <div class="row g-3">
      <div class="col-12 col-md-6">
        <div class="p-3 rounded" style="background-color: #f8f9fa;">
          <h6 class="text-muted mb-1">
            <i class="fas fa-tag me-1"></i>Season Name
          </h6>
          <div class="fw-bold text-dark">
            <%= @season.name %>
          </div>
        </div>
      </div>

      <div class="col-12 col-md-6">
        <div class="p-3 rounded" style="background-color: #f8f9fa;">
          <h6 class="text-muted mb-1">
            <i class="fas fa-toggle-on me-1"></i>Status
          </h6>
          <div class="fw-bold text-dark">
            <%= @season.status.titleize %>
          </div>
        </div>
      </div>

      <div class="col-12 col-md-6">
        <div class="p-3 rounded" style="background-color: #f8f9fa;">
          <h6 class="text-muted mb-1">
            <i class="fas fa-calendar-day me-1"></i>Start Date
          </h6>
          <div class="fw-bold text-dark">
            <%= @season.start_date.strftime('%B %d, %Y') %>
          </div>
        </div>
      </div>

      <div class="col-12 col-md-6">
        <div class="p-3 rounded" style="background-color: #f8f9fa;">
          <h6 class="text-muted mb-1">
            <i class="fas fa-calendar-check me-1"></i>End Date
          </h6>
          <div class="fw-bold text-dark">
            <%= @season.end_date.strftime('%B %d, %Y') %>
          </div>
        </div>
      </div>

      <div class="col-12">
        <div class="p-3 rounded" style="background-color: #f8f9fa;">
          <h6 class="text-muted mb-1">
            <i class="fas fa-users me-1"></i>Total Members
          </h6>
          <div class="fw-bold text-dark">
            <%= pluralize(@season.student_count, 'student') %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Enrolled Students Card -->
<div class="card shadow-sm mb-4">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h5 class="text-dark mb-0">
        <i class="fas fa-users me-2"></i>Enrolled Students
        <span class="badge bg-primary ms-2"><%= @students.count %></span>
      </h5>
      <% unenrolled_count = Student.active.count - @students.count %>
      <% if unenrolled_count > 0 %>
        <%= form_with url: bulk_enroll_admin_season_path(@season), method: :post, local: true, id: "bulk-enroll-form", class: "d-inline" do |form| %>
          <button type="submit" class="btn btn-success">
            <i class="fas fa-users-plus me-1"></i>Enroll All <%= unenrolled_count %> Active Students
          </button>
        <% end %>
      <% end %>
    </div>

    <% if @students.any? %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="table-primary">
            <tr>
              <th>Student Name</th>
              <th>Grade</th>
              <th>Favorite Pok√©mon</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @students.each do |student| %>
              <% student_season = @season.student_seasons.find_by(student: student) %>
              <tr>
                <td class="text-dark">
                  <%= link_to student_path(student), class: "text-decoration-none" do %>
                    <%= student.full_name %>
                  <% end %>
                </td>
                <td class="text-muted"><%= student.grade_display %></td>
                <td class="text-muted"><%= student.favorite_pokemon || 'Not specified' %></td>
                <td>
                  <div class="d-flex gap-1">
                    <%= link_to student_path(student), class: "btn btn-sm btn-outline-primary" do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    <% if student_season %>
                      <% form_id = "remove-student-#{student.id}-form" %>
                      <%= form_with url: student_admin_student_season_path(student, student_season), method: :delete, local: true, id: form_id, class: "d-inline" do |form| %>
                        <button type="button"
                                class="btn btn-sm btn-outline-danger"
                                data-bs-toggle="modal"
                                data-bs-target="#confirmationModal"
                                data-confirm-title="Remove Student from Season"
                                data-confirm-message="Are you sure you want to remove <%= student.full_name %> from <%= @season.name %>?"
                                data-confirm-action="Remove"
                                data-form-id="<%= form_id %>">
                          <i class="fas fa-times"></i>
                        </button>
                      <% end %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-4">
        <i class="fas fa-users fa-3x text-muted mb-3"></i>
        <p class="text-muted mb-0">No students enrolled in this season yet.</p>
      </div>
    <% end %>
  </div>
</div>

<!-- Generic Confirmation Modal -->
<%= render "shared/generic_confirmation_modal" %>
