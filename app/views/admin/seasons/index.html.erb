<% content_for :title, "Season Management" %>

<!-- Breadcrumb Navigation -->
<nav aria-label="breadcrumb" class="mb-3">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to "Home", root_path, class: "text-decoration-none" %>
    </li>
    <li class="breadcrumb-item active" aria-current="page">Season Management</li>
  </ol>
</nav>

<!-- Action Buttons (Before Header) -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <%= link_to root_path, class: "btn btn-outline-secondary me-2" do %>
      <i class="fas fa-arrow-left me-1"></i>Back to Home
    <% end %>
  </div>
  <div>
    <%= link_to new_admin_season_path, class: "btn btn-success" do %>
      <i class="fas fa-plus me-2"></i>Add New Season
    <% end %>
  </div>
</div>

<!-- Header Card -->
<div class="card shadow-sm mb-4">
  <div class="card-header bg-primary text-white">
    <div class="d-flex align-items-center justify-content-between">
      <div class="d-flex align-items-center">
        <i class="fas fa-calendar-alt me-2"></i>
        <h1 class="h4 mb-0">Season Management</h1>
      </div>
      <div class="d-flex align-items-center">
        <span class="badge bg-light text-dark">
          <i class="fas fa-list me-1"></i>
          <%= pluralize(@seasons.count, 'Season') %>
        </span>
      </div>
    </div>
  </div>
  <div class="card-body">
    <p class="text-muted mb-0">
      <i class="fas fa-info-circle me-1"></i>
      Manage club seasons and track member participation across different sessions.
    </p>
  </div>
</div>

<!-- Filter Controls -->
<div class="card shadow-sm mb-4">
  <div class="card-body">
    <div class="d-flex align-items-center">
      <span class="text-muted me-3">
        <i class="fas fa-filter me-1"></i>Filter Options:
      </span>
      <%= form_with url: admin_seasons_path, method: :get, local: true, class: "d-flex align-items-center" do |form| %>
        <div class="form-check form-switch">
          <%= form.check_box :show_inactive,
                             {
                               checked: @show_inactive,
                               class: "form-check-input",
                               onchange: "this.form.submit()"
                             } %>
          <%= form.label :show_inactive, "Show Inactive Seasons", class: "form-check-label text-muted" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Seasons List -->
<% if @seasons.any? %>
  <div class="card shadow-sm">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead style="background: linear-gradient(135deg, #0084FF 0%, #0056b3 100%);">
            <tr>
              <th class="text-white">Season Name</th>
              <th class="text-white">Start Date</th>
              <th class="text-white">End Date</th>
              <th class="text-white">Status</th>
              <th class="text-white">Members</th>
              <th class="text-white">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @seasons.each do |season| %>
              <tr>
                <td>
                  <div class="d-flex align-items-center">
                    <i class="fas fa-calendar-alt me-2 text-warning"></i>
                    <span class="text-dark fw-medium"><%= season.name %></span>
                  </div>
                </td>
                <td class="text-muted"><%= season.start_date.strftime('%B %d, %Y') %></td>
                <td class="text-muted"><%= season.end_date.strftime('%B %d, %Y') %></td>
                <td>
                  <% if season.current? %>
                    <span class="badge bg-success">Current</span>
                  <% elsif season.inactive? %>
                    <span class="badge bg-secondary">Inactive</span>
                  <% elsif season.upcoming? %>
                    <span class="badge bg-info">Upcoming</span>
                  <% elsif season.past? %>
                    <span class="badge bg-light text-dark">Past</span>
                  <% else %>
                    <span class="text-muted">Active</span>
                  <% end %>
                </td>
                <td class="text-muted">
                  <i class="fas fa-users me-1"></i>
                  <%= pluralize(season.student_count, 'student') %>
                </td>
                <td>
                  <div class="d-flex gap-1">
                    <%= link_to admin_season_path(season), class: "btn btn-sm btn-outline-primary" do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    <%= link_to edit_admin_season_path(season), class: "btn btn-sm btn-outline-secondary" do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% else %>
  <!-- Empty State -->
  <div class="card shadow-sm">
    <div class="card-body text-center py-5">
      <i class="fas fa-calendar-alt fa-4x text-muted mb-3"></i>
      <h3 class="text-dark">No Seasons Found</h3>
      <p class="text-muted mb-4">
        <% if @show_inactive %>
          There are no seasons in the system yet.
        <% else %>
          There are no active seasons. Toggle "Show Inactive Seasons" to see all seasons.
        <% end %>
      </p>
      <%= link_to new_admin_season_path, class: "btn btn-success" do %>
        <i class="fas fa-plus me-2"></i>Create First Season
      <% end %>
    </div>
  </div>
<% end %>
