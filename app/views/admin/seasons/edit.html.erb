<% content_for :title, "Edit Season - #{@season.name}" %>

<!-- Breadcrumb Navigation -->
<nav aria-label="breadcrumb" class="mb-3">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to "Home", root_path, class: "text-decoration-none" %>
    </li>
    <li class="breadcrumb-item">
      <%= link_to "Seasons", admin_seasons_path, class: "text-decoration-none" %>
    </li>
    <li class="breadcrumb-item">
      <%= link_to @season.name, admin_season_path(@season), class: "text-decoration-none" %>
    </li>
    <li class="breadcrumb-item active" aria-current="page">Edit</li>
  </ol>
</nav>

<!-- Header Card -->
<div class="card bg-primary text-white shadow-sm mb-4">
  <div class="card-body">
    <div class="d-flex align-items-center">
      <div class="me-3">
        <i class="fas fa-edit fa-2x"></i>
      </div>
      <div>
        <h2 class="card-title mb-1">Edit Season</h2>
        <p class="card-text mb-0">Update information for <%= @season.name %></p>
      </div>
    </div>
  </div>
</div>

<!-- Form Card -->
<div class="card shadow-sm">
  <div class="card-body">
    <%= render "form", season: @season %>
  </div>
</div>
