<div class="row">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>User Management</h1>
      <%= link_to "Create New User", new_admin_user_path, class: "btn btn-primary" %>
    </div>

    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Created</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td>
                    <%= user.full_name %>
                    <% if user == current_user %>
                      <span class="badge bg-info ms-2">You</span>
                    <% end %>
                  </td>
                  <td><%= user.email_address %></td>
                  <td>
                    <span class="badge bg-<%= user.admin? ? 'warning' : 'secondary' %>">
                      <%= user.role.humanize %>
                    </span>
                  </td>
                  <td><%= user.created_at.strftime("%B %d, %Y") %></td>
                  <td>
                    <%= link_to "View", admin_user_path(user), class: "btn btn-sm btn-outline-primary" %>
                    <%= link_to "Edit", edit_admin_user_path(user), class: "btn btn-sm btn-outline-warning" %>
                    <% unless user == current_user %>
                      <%= link_to "Delete", admin_user_path(user),
                                  method: :delete,
                                  data: {
                                    confirm: "Are you sure you want to delete #{user.email_address}?"
                                  },
                                  class: "btn btn-sm btn-outline-danger" %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>