<% content_for :title, "User Details - #{@user.full_name}" %>

<!-- Breadcrumb Navigation -->
      <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <%= link_to "Home", root_path, class: "text-decoration-none" %>
          </li>
          <li class="breadcrumb-item">
            <%= link_to "User Management", admin_users_path, class: "text-decoration-none" %>
          </li>
          <li class="breadcrumb-item active" aria-current="page"><%= @user.full_name %></li>
        </ol>
      </nav>

      <!-- Action Buttons (Before Header) -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <%= link_to admin_users_path, class: "btn btn-outline-secondary me-2" do %>
            <i class="fas fa-arrow-left me-1"></i>Back
          <% end %>
          <%= link_to edit_admin_user_path(@user), class: "btn btn-outline-primary me-2" do %>
            <i class="fas fa-edit me-1"></i>Edit
          <% end %>
          <% unless @user == current_user %>
            <%= form_with model: [:admin, @user], method: :delete, local: true, class: "d-inline", id: "delete-user-form" do |form| %>
              <button type="button"
                      class="btn btn-outline-danger"
                      data-bs-toggle="modal"
                      data-bs-target="#confirmationModal"
                      data-confirm-title="Delete User"
                      data-confirm-message="Are you sure you want to delete <%= @user.full_name %> (<%= @user.email_address %>)? This action cannot be undone and will remove all associated data."
                      data-confirm-action="Delete User"
                      data-form-id="delete-user-form">
                <i class="fas fa-trash me-1"></i>Delete
              </button>
            <% end %>
          <% end %>
        </div>
      </div>

      <!-- Header Card -->
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
          <div class="d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center">
              <i class="fas fa-user me-2"></i>
              <h1 class="h4 mb-0">User Details</h1>
            </div>
            <div class="d-flex align-items-center">
              <% if @user == current_user %>
                <span class="badge bg-light text-dark me-2">
                  <i class="fas fa-user-check me-1"></i>Your Account
                </span>
              <% end %>
              <% if @user.admin? %>
                <span class="badge bg-warning text-dark">
                  <i class="fas fa-shield-alt me-1"></i>Administrator
                </span>
              <% else %>
                <span class="badge bg-light text-dark">
                  <i class="fas fa-user me-1"></i>User
                </span>
              <% end %>
            </div>
          </div>
        </div>
        <div class="card-body">
          <p class="text-muted mb-0">
            <i class="fas fa-info-circle me-1"></i>
            Detailed information for this user account.
          </p>
        </div>
      </div>

      <!-- User Information Card -->
      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <h5 class="text-dark border-bottom pb-2 mb-4">
            <i class="fas fa-address-card me-2"></i>User Information
          </h5>

          <div class="row g-3">
            <div class="col-12 col-md-6">
              <div class="p-3 rounded" style="background-color: #f8f9fa;">
                <h6 class="text-muted mb-1">
                  <i class="fas fa-user me-1"></i>Full Name
                </h6>
                <div class="fw-bold text-dark">
                  <%= @user.full_name %>
                  <% if @user == current_user %>
                    <span class="badge bg-info ms-2">
                      <i class="fas fa-user-check me-1"></i>You
                    </span>
                  <% end %>
                </div>
              </div>
            </div>

            <div class="col-12 col-md-6">
              <div class="p-3 rounded" style="background-color: #f8f9fa;">
                <h6 class="text-muted mb-1">
                  <i class="fas fa-envelope me-1"></i>Email Address
                </h6>
                <div class="fw-bold text-dark">
                  <%= @user.email_address %>
                </div>
              </div>
            </div>

            <div class="col-12 col-md-6">
              <div class="p-3 rounded" style="background-color: #f8f9fa;">
                <h6 class="text-muted mb-1">
                  <i class="fas fa-shield-alt me-1"></i>Account Role
                </h6>
                <div class="fw-bold text-dark">
                  <% if @user.admin? %>
                    <span class="badge bg-warning text-dark">
                      <i class="fas fa-shield-alt me-1"></i>Administrator
                    </span>
                  <% else %>
                    <span class="badge bg-secondary">
                      <i class="fas fa-user me-1"></i>User
                    </span>
                  <% end %>
                </div>
              </div>
            </div>

            <div class="col-12 col-md-6">
              <div class="p-3 rounded" style="background-color: #f8f9fa;">
                <h6 class="text-muted mb-1">
                  <i class="fas fa-calendar-plus me-1"></i>Account Created
                </h6>
                <div class="fw-bold text-dark">
                  <%= @user.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                </div>
              </div>
            </div>

            <div class="col-12">
              <div class="p-3 rounded" style="background-color: #f8f9fa;">
                <h6 class="text-muted mb-1">
                  <i class="fas fa-clock me-1"></i>Last Updated
                </h6>
                <div class="fw-bold text-dark">
                  <%= @user.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Admin Controls Section -->
      <% if @user != current_user %>
        <div class="card shadow-sm">
          <div class="card-header text-white" style="background: linear-gradient(135deg, #FFA500 0%, #FF8C00 100%);">
            <h5 class="card-title mb-0 d-flex align-items-center">
              <i class="fas fa-shield-alt me-2"></i>
              Admin Controls
            </h5>
          </div>
          <div class="card-body">
            <p class="text-muted mb-3">
              <i class="fas fa-exclamation-triangle me-1"></i>
              Administrative actions for this user account. Use caution when making changes.
            </p>

            <div class="d-flex gap-2">
              <%= link_to edit_admin_user_path(@user), class: "btn btn-outline-primary" do %>
                <i class="fas fa-edit me-2"></i>Edit User Details
              <% end %>

              <%= form_with model: [:admin, @user], method: :delete, local: true, class: "d-inline", id: "admin-delete-user-form" do |form| %>
                <button type="button"
                        class="btn btn-outline-danger"
                        data-bs-toggle="modal"
                        data-bs-target="#confirmationModal"
                        data-confirm-title="Delete User Account"
                        data-confirm-message="Are you sure you want to permanently delete <%= @user.full_name %>'s account? This will remove all associated data and cannot be undone."
                        data-confirm-action="Delete User Account"
                        data-form-id="admin-delete-user-form">
                  <i class="fas fa-trash me-2"></i>Delete User Account
                </button>
              <% end %>
            </div>
          </div>
        </div>
      <% else %>
        <div class="card shadow-sm">
          <div class="card-body text-center">
            <div class="text-muted">
              <i class="fas fa-info-circle fa-2x mb-3"></i>
              <h5 class="text-muted">Your Account</h5>
              <p class="text-muted">
                This is your own user account. You cannot delete your own account from here.
                Use the Edit button above to modify your account details.
              </p>
            </div>
          </div>
        </div>
  <% end %>

<!-- Confirmation Modal -->
<%= render "shared/generic_confirmation_modal" %>
    </div>
  </div>
</div>