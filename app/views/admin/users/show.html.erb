<div class="row">
  <div class="col-md-8 mx-auto">
    <div class="card">
      <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
          <h2>User Details</h2>
          <div>
            <%= link_to "Edit", edit_admin_user_path(@user), class: "btn btn-warning" %>
            <% unless @user == current_user %>
              <%= link_to "Delete", admin_user_path(@user),
                          method: :delete,
                          data: {
                            confirm: "Are you sure you want to delete this user?"
                          },
                          class: "btn btn-danger" %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-sm-3">Name:</dt>
          <dd class="col-sm-9">
            <%= @user.full_name %>
            <% if @user == current_user %>
              <span class="badge bg-info ms-2">You</span>
            <% end %>
          </dd>

          <dt class="col-sm-3">Email:</dt>
          <dd class="col-sm-9"><%= @user.email_address %></dd>

          <dt class="col-sm-3">Role:</dt>
          <dd class="col-sm-9">
            <span class="badge bg-<%= @user.admin? ? 'warning' : 'secondary' %>">
              <%= @user.role.humanize %>
            </span>
          </dd>

          <dt class="col-sm-3">Created:</dt>
          <dd class="col-sm-9"><%= @user.created_at.strftime("%B %d, %Y at %I:%M %p") %></dd>

          <dt class="col-sm-3">Last Updated:</dt>
          <dd class="col-sm-9"><%= @user.updated_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
        </dl>

        <div class="mt-4">
          <%= link_to "← Back to User Management", admin_users_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>